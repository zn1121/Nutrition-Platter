  margin-top: 10rpx;
  margin-left: 20rpx;
  flex: 9;
}

.search_icon {
  margin-top: 10rpx;
  margin-right: 10rpx;
  height: 50rpx;
  width: 50rpx;
  opacity: 0.2;
}

