.modal-mask {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  margin-bottom: 20rpx;
}

.modal-content {
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  height: 55%;
  overflow: hidden;
  padding: 50rpx 50rpx 50rpx;
  background: #eff;
  margin: -180rpx 70rpx;
  border-radius: 20rpx;
}
