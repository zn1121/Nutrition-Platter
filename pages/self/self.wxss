  overflow: scroll;
}
.block_modal_card{
  background: #fff;
  width: 90%;
  margin: 0 auto;
  margin-top: 3%;
  text-align: center;
  border-radius:20rpx; 
}

.block_title_modal {
  position: relative;
  font-size: 32rpx;
  line-height: 1.2;
  padding: 10rpx;
  text-indent: 30rpx;
}

.block_title_modal::after {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  content: '';
  width: 9rpx;
  height: 46rpx;
  background: rgb(68, 228, 233);
}

.block_title_modal_content{
  font-size: 26rpx;
  padding: 0 0rpx 0 52rpx;
  font-family:"幼圆"; 
}