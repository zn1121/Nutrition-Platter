.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  height: 55%;
  overflow: hidden;
  padding: 50rpx 50rpx 50rpx;
  background: #eff;
  margin: -180rpx 70rpx;
  border-radius: 20rpx;
}
.teacher_name_modal{
  font-family: "楷体";
  text-align:center;
  font-size: 150%;
}
.modal_img{
  border-radius:250rpx;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  margin-top:5%;
  overflow: hidden;
  display: flex;
  justify-content: center;
}
.contact_modal {
  width: 25%;
  float: right;
  margin-right: 5%;
}

.block_modal {
  background: #fff;
  width: 100%;
  height: 390rpx;
  margin-top: 40rpx;
  overflow: scroll;
}

.block_title_modal {
  position: relative;
  font-size: 32rpx;
  line-height: 1.2;
  padding: 10rpx;
  text-indent: 30rpx;
}

.block_title_modal::after {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  content: '';
  width: 9rpx;
  height: 46rpx;
  background: rgb(68, 228, 233);
}

.block_title_modal_content{
  font-size: 26rpx;
  padding: 0 0rpx 0 52rpx;
  font-family:"幼圆"; 
}
